<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.shadertoy.cycler" name="Shadertoy Cycler Service" version="1.0.0" provider-name="YourName">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="screensaver.shadertoy" version="1.0.0"/>
    </requires>
    <extension point="xbmc.service" library="service.py" start="startup"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">A service to cycle Shadertoy screensaver shaders</summary>
        <description lang="en">This service cycles through Shadertoy shaders automatically when the screensaver is active.</description>
        <platform>all</platform>
    </extension>
</addon>
